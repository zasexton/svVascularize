include LICENSE
include README.md

# Include all .pyx files
recursive-include svv/utils/spatial *.pyx
recursive-include svv/tree/utils *.pyx
recursive-include svv/domain/routines *.pyx
recursive-include svv/simulation/utils *.pyx

# Include remesher executables (arch-aware layout)
recursive-include svv/utils/remeshing/Linux/x86_64 *
recursive-include svv/utils/remeshing/Linux/aarch64 *
recursive-include svv/utils/remeshing/Mac/universal2 *
recursive-include svv/utils/remeshing/Mac/x86_64 *
recursive-include svv/utils/remeshing/Windows/x86_64 *

# Include locally-built tools (optional; used by some dev/CI flows)
recursive-include svv/bin *
 
# Include GUI assets (theme tokens, icons, etc.)
recursive-include svv/visualize/gui *.json *.qss *.png *.svg

# Exclude any compiled extension artifacts from source distribution
global-exclude *.so *.pyd *.dylib *.dll
